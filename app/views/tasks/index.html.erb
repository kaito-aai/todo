<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    <p  style = "border-bottom: 1px solid #eaeaea; padding: 10px 0;"></p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
